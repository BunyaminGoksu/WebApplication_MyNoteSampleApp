@model EBulletinSendEmailsViewModel

@{
	ViewData["Title"] = "E-Bülten Mesaj Gönderim";
}

<div class="row mb-4">
	<div class="col">
		<h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
	</div>
</div>

<div class="row">
	<div class="col-4">
		<div class="text-danger small text-center" asp-validation-summary="ModelOnly"></div>

		<form method="post">
			<div class="form-group mb-3">
				<label asp-for="Emails" class="font-weight-bold small"></label>
				<select class="form-control" asp-for="Emails" asp-items="@Model.EmailAdresses" multiple> </select>
				<small>Çoklu seçim için klavyeden CTRL tuşuna basarak seçim yapabilirsiniz.</small>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Subject" class="font-weight-bold small"></label>
				<input asp-for="Subject" class="form-control" id="CategoryName" placeholder="@TextData.GetSentences(2)">
				<span asp-validation-for="Subject" class="text-danger small"></span>
			</div>
			<div class="form-group mb-3">
				<label asp-for="Text" class="font-weight-bold small"></label>
				<textarea asp-for="Text" rows="5" class="form-control" placeholder="@TextData.GetSentences(2)"></textarea>
				<span asp-validation-for="Text" class="text-danger small"></span>

			</div>

			<div>
				<button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-paper-plane"></i> Gönder</button>
				<a class="btn btn-secondary btn-sm" asp-action="Index"><i class="fa fa-arrow-left"></i> Listeye Dön </a>
			</div>
		</form>
	</div>
</div>
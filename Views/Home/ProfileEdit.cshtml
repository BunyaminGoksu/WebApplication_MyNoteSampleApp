@{
	ViewData["Title"] = "Profil dÜZENLE";
}

<div class="row p-4">
	<div class="col">
		<h3 class="display-4 border-bottom">Kullanıcı Hesabı Düzenle</h3>
	</div>
</div>
<div class="row p-4">
	<div class="col-3  text-center">
		<img src="https://picsum.photos/id/1005/128" class="rounded-circle img-thumbnail" />
		<div class="mt-4">
			<form method="post" enctype="multipart/form-data">
				<div>
					<input type="file" class="form-control" />
					<small>Lütfen sadece jpeg,jpg veya png formatında dosya yükleyiniz</small>
				</div>
				<div class="mt-3">
					<button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-upload"></i> Yükle</button>
				</div>
			</form>
		</div>
	</div>
	<div class="col-4 offset-1">
		<form>
			<div class="form-group mb-3">
				<label for="fullname" class="font-weight-bold small">Ad Soyad</label>
				<input type="text" class="form-control" id="fullname"placeholder="name surname">
			</div>
			<div class="form-group mb-3">
				<label for="username" class="font-weight-bold small">Kullanıcı Adı</label>
				<input type="text" class="form-control" id="username" placeholder="username" >
				@*<div  class="form-text">We'll never share your email with anyone else.</div>*@
			</div>
			<div class="form-group mb-3"> 
				<label for="email" class="font-weight-bold small">E-posta Adresi</label>
				<input type="email" class="form-control" id="email" placeholder="abc@mail.com">
			</div>
			<div class="form-group mb-3">
				<label for="pass" class="font-weight-bold small">Şifre</label>
				<input type="password" class="form-control" id="pass" placeholder="şifre">
			</div>
			<div class="text-center" >
			<button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"></i> Kaydet</button>

			</div>
		</form>
	</div>
</div>

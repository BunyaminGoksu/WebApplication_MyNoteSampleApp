@{
	ViewData["Title"] = "Kullanıcı Oluştur";
}
<div class="row mb-4">
	<div class="col">
		<h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
	</div>
</div>
<div class="row">
	<div class="col-4">
		<form>
			<div class="form-group mb-3">
				<label for="Fullname" class="font-weight-bold small">Ad Soyad</label>
				<input type="text" class="form-control" id="Fullname" placeholder="@NameData.GetFullName()">
			</div>
			<div class="form-group mb-3">
				<label for="Username" class="font-weight-bold small">Kullanıcı Adı</label>
				<input type="text" class="form-control" id="Username" placeholder="@NameData.GetTitleName()">
			</div>
			<div class="form-group mb-3">
				<label for="Email" class="font-weight-bold small">E-posta Adresi</label>
				<input type="email" class="form-control" id="Email" placeholder="@NetworkData.GetEmail()">
			</div>
			<div class="form-group mb-3">
				<label for="Password" class="font-weight-bold small">Şifre</label>
				<input type="password" class="form-control" id="Password" placeholder="@TextData.GetNumeric(6)">
			</div>
			<div class="form-group mb-3">
				<label for="RePassword" class="font-weight-bold small">Şifre(Tekrar)</label>
				<input type="password" class="form-control" id="RePassword" placeholder="@TextData.GetNumeric(6)">
			</div>
			<div class="form-group form-check">
				<input type="checkbox" class="form-check-input" id="isactive" />
				<label class="form-check-label" for="isactive">Aktif</label>
			</div>
			<div class="form-group form-check">
				<input type="checkbox" class="form-check-input" id="isAdmin" />
				<label class="form-check-label" for="isAdmin">Yönetici</label>
			</div>


			<div>
				<button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i> Oluştur</button>
				<a class="btn btn-secondary btn-sm" asp-action="Index"><i class="fa fa-arrow-left"></i> Listeye Dön </a>
			</div>
		</form>
	</div>
</div>